/* pages/articles/articles.wxss */
.con {
  margin-top: 50rpx;
  width: 90%;
  margin-left: 5%;
  background-color: white;
  border-radius: 20rpx;
}

.article {
  border-bottom: 5rpx rgb(240, 242, 243) solid;
  padding: 20rpx;
}

.title {
  font-size: 40rpx;
  word-wrap: break-word;
  margin-left: 7rpx;
  margin-bottom: 7rpx;

  overflow: hidden;
  text-overflow:ellipsis;  
  width: 50rpx;
}

.content {
  font-size: 35rpx;
  word-wrap: break-word;
  margin-left: 7rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  height: 100rpx;
}

.time {
  float: right;
  font-size: 30rpx;
}

.acticle-image {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}

.image {
  width: 200rpx;
  height: 200rpx;
  margin: 7rpx;
}

.del-img {
  height: 50rpx;
  width: 50rpx;
}

#delete2 {
  width: 100%;
  height: 80rpx;
}

.loading{
  text-align:center;
}

.loading-img {
  height: 100rpx;
  width: 100rpx;
}
page{
  background-color: white;
}

.con {
  width: 90%;
  margin-top: 50rpx;
  margin-left: 5%;

}

.input {
  width: 100%;
}

.input textarea {
  margin-top: 20rpx;
  height: 250rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.showImage {
  width: 28vw;
  height: 28vw;
  margin: 6rpx 10rpx 10rpx 10rpx;
}

.showImage image {
  width: 100%;
  height: 100%;
}

.box {
  box-sizing: border-box;
  position: relative;
}

.delete {
  position: absolute;
  top: -21rpx;
  right: -21rpx;
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, .3);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.uploadIcon {
  margin: 0px 10rpx 0rpx 0rpx;
  padding: 0px;
}

.uploadIcon image {
  vertical-align: middle;
  width: 56rpx;
  height: 56rpx;
  padding: 8rpx 8rpx;
}

#login {
  position: relative;
  margin-top: 50rpx;
  background-color: rgb(51, 204, 170);
  color: aliceblue;
  width: 600rpx;
  border-radius: 50rpx;
}